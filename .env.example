# Required for npm run dev
# When using shared .env: DATABASE_URL_ART_TRANSFORM takes precedence for Art Transform
DATABASE_URL=
DATABASE_URL_ART_TRANSFORM=
SESSION_SECRET=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Google API (image generation)
GOOGLE_API_KEY=

# Medusa (art-transform / portraits.art-and-see.com)
# Admin auth: Medusa v2 requires email/password login (JWT), not a fixed token
MEDUSA_ADMIN_EMAIL=
MEDUSA_ADMIN_PASSWORD=
MEDUSA_BACKEND_URL=
MEDUSA_PUBLISHABLE_KEY=
USE_MEDUSA_PRODUCTS=true
VITE_MEDUSA_BACKEND_URL=
VITE_USE_MEDUSA_PRODUCTS=true
# Storefront URL for checkout redirect (required for Add to Cart flow)
MEDUSA_STOREFRONT_URL=https://portraits.art-and-see.com
# Public URL for art-transform — REQUIRED for production.
# Used to build previewImageUrl (https://ai.art-and-see.com/api/transform/:id/image)
# that Photos-to-Paintings, Medusa dashboard, and emails use to display the transformed image.
# Images are served directly from Neon DB via this endpoint — no extra hosting needed.
# If unset, checkout on production will try to load images from localhost and fail.
ART_TRANSFORM_PUBLIC_URL=https://ai.art-and-see.com
# Region ID for cart creation (must match Photos-to-Paintings for add line item to work)
# Default: USA region used by portraits.art-and-see.com
MEDUSA_REGION_ID=reg_01KF60P6AREHJSW90593P3VCRZ
# Optional: sales channel ID for medusa-setup-stock-location (default: first channel)
# MEDUSA_SALES_CHANNEL_ID=
